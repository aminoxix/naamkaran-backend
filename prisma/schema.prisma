generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String    @unique
  username String?
  promots  Prompts[]

  @@map("users")
}

model Prompts {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  prompt String
  answer String

  partner1 String?
  partner2 String?
  gender   ChildEnum?

  name       String?
  aim        String?
  hobby      String?
  animal     String?
  background String?
  worded     WordedEnum?

  isFav      Boolean @default(false)
  isCombo    Boolean @default(false)
  isUsername Boolean @default(false)

  userId String
  User   User   @relation(fields: [userId], references: [id])

  @@map("prompts")
}

enum WordedEnum {
  ONE
  TWO
}

enum ChildEnum {
  BOY
  GIRL
}
