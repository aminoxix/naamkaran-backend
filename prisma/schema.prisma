generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  username     String?
  promots      Prompts[]

  @@map("users")
}

model Prompts {
  id          String  @id @default(cuid())
  prompt      String
  answer      String

  male        String?
  female      String?

  name        String?
  background  String?
  food        String?
  animal      String?
  aim         String?
  worded      WordedEnum?

  userId      String
  User        User    @relation(fields: [userId], references: [id])

  @@map("prompts")
}

enum WordedEnum {
  ONE
  TWO
}